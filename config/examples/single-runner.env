# Example: Single Runner Configuration
# Simple setup for one repository with one runner

# GitHub App Authentication
GITHUB_APP_ID=123456
GITHUB_APP_INSTALLATION_ID=789012
GITHUB_APP_PRIVATE_KEY_PATH=/etc/github-runner/app-key.pem

# Repository
REPO_URL=https://github.com/myorg/myrepo
RUNNER_NAME=docker-runner-prod
LABELS=self-hosted,linux,x64,docker

# Resources (moderate)
CPU_LIMIT=2.0
CPU_RESERVATION=0.5
MEMORY_LIMIT=4g
MEMORY_RESERVATION=1g

# Docker enabled
ENABLE_DOCKER=true
RUNNER_VERSION=2.329.0

# Cleanup
CLEANUP_WORKSPACE_DAYS=7
CLEANUP_DOCKER_HOURS=24
