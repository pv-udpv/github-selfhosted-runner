# Example: Enterprise Configuration
# Production-grade setup with full resources and monitoring

# GitHub App Authentication
GITHUB_APP_ID=123456
GITHUB_APP_INSTALLATION_ID=789012
GITHUB_APP_PRIVATE_KEY_PATH=/etc/github-runner/app-key.pem

# Repository
REPO_URL=https://github.com/enterprise-org/critical-repo
RUNNER_NAME=docker-runner-enterprise-01
LABELS=self-hosted,linux,x64,docker,enterprise,prod
RUNNER_GROUP=production

# High resources
CPU_LIMIT=4.0
CPU_RESERVATION=2.0
MEMORY_LIMIT=8g
MEMORY_RESERVATION=4g
DISK_LIMIT=50g

# Docker enabled with custom network
ENABLE_DOCKER=true
RUNNER_VERSION=2.329.0
NETWORK_MODE=custom
NETWORK_NAME=enterprise-runner-net

# Conservative cleanup
CLEANUP_WORKSPACE_DAYS=14
CLEANUP_DOCKER_HOURS=48

# Enhanced logging
LOG_MAX_FILES=5
LOG_MAX_SIZE=20m
DEBUG=false

# Security
DISABLE_AUTO_UPDATE=true
